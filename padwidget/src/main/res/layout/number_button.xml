<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="35dp"
    android:id="@+id/root"
    android:background="@drawable/bg_number_button"
    android:divider="@drawable/divider_horizontal"
    android:orientation="horizontal"
    android:showDividers="middle">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/button_sub"
        android:layout_width="@dimen/ccc_widget_height"
        android:layout_height="@dimen/ccc_widget_height"
        android:background="@color/num_btn_bg"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/white"
        android:minWidth="30dp"
        android:textSize="@dimen/ccc_title_textsize"/>
    <TextView
        android:id="@+id/button_add"
        android:layout_width="@dimen/ccc_widget_height"
        android:minWidth="30dp"
        android:layout_height="@dimen/ccc_widget_height"
        android:background="@color/num_btn_bg"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="@dimen/ccc_title_textsize"
        android:layout_alignParentRight="true"/>
    <EditText
        android:id="@+id/middle_count"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ccc_widget_height"
        android:background="@null"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:inputType="number"
        android:gravity="center"
        android:text="1998"

        android:textSize="@dimen/ccc_title_textsize"
        android:textColor="@color/ccc_black_textcolor"
        android:textCursorDrawable="@null"
        android:layout_toRightOf="@+id/button_sub"
        android:layout_toLeftOf="@+id/button_add"/>
    </RelativeLayout>

</LinearLayout>