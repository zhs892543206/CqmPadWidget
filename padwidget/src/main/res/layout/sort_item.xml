<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/catalog"
        android:textColor="@color/cc_text_blank"
        android:textSize="@dimen/widget_txtsize"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:paddingLeft="20dip"
        android:paddingTop="@dimen/widget_margin"
        android:paddingBottom="@dimen/widget_margin"
        android:text="A"
        android:background="@color/cc_list_title_bk"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_weight="1.0"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="@dimen/widget_padding"
        android:paddingBottom="@dimen/widget_padding"
        android:background="@drawable/hot_lay_item_white_list_select">
        <TextView
            android:id="@+id/people_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:text="123"
            android:textColor="@color/red"
            android:textSize="@dimen/widget_txtsize"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="hhhh"
            android:textColor="@color/cc_text_dark"
            android:textSize="@dimen/widget_txtsize"/>

    </RelativeLayout>


</LinearLayout>