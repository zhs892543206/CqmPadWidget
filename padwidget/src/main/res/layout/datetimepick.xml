<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dip"
        android:gravity="center"
        android:background="@drawable/border_bottom" 
        android:orientation="vertical" >
       <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:background="@mipmap/dialog_bg_top_normal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/year_l"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="1dip"                
            	android:text="年"  
            	android:gravity="center"
                android:layout_weight="0.9"
                android:textSize="@dimen/ccc_widget_textsize_small"/>

            <TextView
                android:id="@+id/month_l"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dip"
                android:layout_marginTop="1dip"
                android:text="月"  
                android:gravity="center"
                android:textSize="@dimen/ccc_widget_textsize_small"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/day_l"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dip"
                android:layout_marginTop="1dip"
                android:text="日"  
                android:gravity="center"
                android:textSize="@dimen/ccc_widget_textsize_small"
                android:layout_weight="1" />
            
            <TextView
                android:id="@+id/hour_l"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginBottom="1dip"
                android:layout_marginTop="1dip"
                android:text="时"       
                android:gravity="center"           
                android:layout_weight="1"
                android:textSize="@dimen/ccc_widget_textsize_small"/>

            <TextView
                android:id="@+id/mins_l"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dip"
                android:layout_marginTop="1dip"
                android:text="分"     
                android:gravity="center" 
                android:layout_weight="1"
                android:textSize="@dimen/ccc_widget_textsize_small"/>

            <TextView
                android:id="@+id/secs_l"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dip"
                android:layout_marginTop="1dip"
                android:text="秒"     
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/ccc_widget_textsize_small"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/dialog_bg_top_normal"
            android:layout_marginTop="2dip"
            android:orientation="horizontal" >

            <com.ewell.padwidget.Timewheelview.TimeWheelView
                android:id="@+id/year"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="2dip"
                android:layout_weight="0.9" />

            <com.ewell.padwidget.androidwheel.WheelView
                android:id="@+id/month"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="2dip"
                android:layout_weight="1" />

            <com.ewell.padwidget.Timewheelview.TimeWheelView
                android:id="@+id/day"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="2dip"
                android:layout_weight="1" />

            <com.ewell.padwidget.Timewheelview.TimeWheelView
                android:id="@+id/hour"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="2dip"
                android:layout_weight="1" />

            <com.ewell.padwidget.Timewheelview.TimeWheelView
                android:id="@+id/mins"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="2dip"
                android:layout_weight="1" />

            <com.ewell.padwidget.androidwheel.WheelView
                android:id="@+id/secs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="2dip"
                android:layout_weight="1" />           
        </LinearLayout>

         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ccc_widget_height"
        android:background="@mipmap/dialog_bg_bottom_normal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_right_selector"
            android:text="取消"
            android:textSize="@dimen/ccc_widget_textsize"
            android:textColor="#5C5D5C" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.01"
            android:background="#E9E2DD" />
		<Button
            android:id="@+id/set"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_left_selector"
            android:text="确定"
            android:textSize="@dimen/ccc_widget_textsize"
            android:textColor="@color/title_bg" />
        
    </LinearLayout>
    </LinearLayout>

</LinearLayout>